<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Decacher" status="INFO">
    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="Console" level="${sys:decacher.verbose:-OFF}"/>
        </Root>
    </Loggers>

    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n%throwable</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>
</Configuration>